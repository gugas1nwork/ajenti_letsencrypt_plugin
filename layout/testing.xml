<body>
        <tabs id="tabs">
            <tab title="{Main config}">
                <pad> <!-- adds whitespace padding -->
					<vc binder:context="letsencryptconfig"> <!-- horizontal container -->

					  <formline text="Dehydrated Basedir">
						<textbox bind="basedir"/>
					  </formline>
					  <formline text="Script Name">
						<textbox bind="scriptname"/>
					  </formline>
					  <formline text="Wellknown Basedir">
						<textbox bind="wellknown"/>
					  </formline>

					  <formline text="Domains (one per line)">
						<codearea id="domains" bind="domains" width="500" height="400"/>
					  </formline>

					  <formline text="Create crontask">
						<checkbox id="cronjob" bind="cronjob" />
					  </formline>

					  <formline text="Certificate renewal">
						<checkbox id="renewal" bind="renewal" />
					  </formline>
					</vc>

					<hc>
					  <button text="{Save}" id="save" icon="ok"/>
					  <button text="{Test}" id="test" icon="ok"/>
					  <button text="Request" id="request" icon="ok"/>
					</hc>

				</pad>
            </tab>
            <tab title="{Certs}" visible="false" id="main-conf-tab">
               <pad> <!-- adds whitespace padding -->
			   <bind:collection bind="certs" id="certs">
                        <dt bind="__items"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <right>
                                        <hc>
                                            <button bind="__delete" icon="remove" style="icon"
                                                    warning="{Confirm deletion}"/>
                                        </hc>
                                    </right>
                                    <hc>
                                        <icon icon="globe"/>
                                        <checkbox bind="active" id="header-active-checkbox"/>
                                        <box width="200">
                                            <label bind="name" style="bold"/>
                                        </box>
                                    </hc>
                                </box>
                                <indent>
                                    <vc>
                                        <formline text="{Name}">
                                            <textbox bind="name"/>
                                        </formline>  
                                    </vc>
                                </indent>
                            </collapserow>
                        </bind:template>
                    </bind:collection>				
				</pad>
            </tab>
        </tabs>
    </body>